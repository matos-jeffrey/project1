@model NetBankDB.Models.Accounts

@{
    ViewData["Title"] = "Delete";
}

<h2>Closing Account @Model.accountType - @Model.accountID</h2>

<h3>Are you sure you want to close this account?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Account:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.accountType)
        </dd>
        <dt>
            Account ID:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.accountID)
        </dd>
        <dt>
            Balance:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.balance)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="accountID" />
        <input type="submit" value="Close Account" class="btn btn-default" /> |
        <button class="btn btn-default"> @Html.ActionLink("Accounts", "Index", "Accounts", new { userID = @Model.userID })</button>
    </form>
</div>
