@model NetBankDB.Models.Customers

@{
    ViewData["Title"] = "Login";
}

<img src="~/images/WBLogo.jpg" width="50%" height="50%"/>
<h4>Please Log into Your Account to Continue</h4>
<div class="row">
    <div class="col-md-4">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Customers", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label">Username:</label>
                    <input id="username" name="username" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Password:</label>
                    <input asp-for="password" id="password" name="password" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-default" />
                    <button class="btn btn-default"> @Html.ActionLink("Home", "Index", "Home") </button>
                </div>
            }
        </section>
    </div>
</div>
